<div class="trailer-modal__overlay">
  <div class="trailer-modal__window">
    <button class="trailer-modal__close">Ã—</button>
    {{#if isYoutube}}
      <iframe 
        class="trailer-modal__iframe" 
        src="{{trailerUrl}}" 
        frameborder="0" 
        allowfullscreen>
      </iframe>
    {{else}}
      <video class="trailer-modal__video" controls autoplay>
